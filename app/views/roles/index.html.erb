<h1>Listing roles</h1>

<table>
  <tr>
    <th>Character name</th>
    <th>Movie</th>
    <th>Actor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.character_name %></td>
    <td><%= link_to role.movie.title, role.movie %></td>
    <td><%= link_to role.actor.name, role.actor %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

