<h1>Listing votes</h1>

<table>
  <tr>
    <th>Movie</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @votes.each do |vote| %>
  <tr>
    <td><%= link_to vote.movie.title, movie_url(vote.movie) %></td>
    <td><%= link_to vote.user.username, user_url(vote.user) %></td>
    <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
    <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vote', new_vote_path %>
